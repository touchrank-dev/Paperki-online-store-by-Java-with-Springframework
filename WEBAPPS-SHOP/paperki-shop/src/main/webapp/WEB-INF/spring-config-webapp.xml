    <context:property-placeholder location="classpath:webapp.properties"/>

    <mvc:annotation-driven/>

    <context:component-scan base-package="com.kushnir.paperki.webapp.*"/>

    <mvc:resources mapping="/resources/**" location="WEB-INF/templates/paperki/resources/"/>

    <bean id="templateResolver"
          class="org.thymeleaf.templateresolver.ServletContextTemplateResolver">
        <constructor-arg ref="servletContext"/>
        <property name="prefix" value="/WEB-INF/templates/paperki/"/>
        <property name="suffix" value=".html"/>
        <property name="templateMode" value="HTML5"/>
    </bean>

    <bean id="templateEngine"
          class="org.thymeleaf.spring4.SpringTemplateEngine">
        <property name="templateResolver" ref="templateResolver"/>
    </bean>

    <bean class="org.thymeleaf.spring4.view.ThymeleafViewResolver">
        <property name="templateEngine" ref="templateEngine"/>
    </bean>

</beans>